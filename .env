# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://pms_user:pms_password123@localhost:5432/pms_db
DEV_DATABASE_URL=postgresql://pms_user:pms_password123@localhost:5432/pms_db

# Redis Configuration (for Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

